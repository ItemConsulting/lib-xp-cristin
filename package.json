{
  "name": "xp-lib-cristin",
  "version": "1.0.3",
  "description": "Library for retrieving and storing data from Cristin",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:client": "webpack --config webpack.client.config.js --color",
    "build:server": "webpack --config webpack.server.config.js --color",
    "build": "run-p -c build:*",
    "dist:client": "cross-env NODE_ENV=production webpack --config webpack.client.config.js --color",
    "dist:server": "cross-env NODE_ENV=production webpack --config webpack.server.config.js --color --hide-modules",
    "dist": "run-p -c dist:*",
    "json2ts": "json2ts -i src/main/resources/lib/cristin/types/json-schemas/ -o src/main/resources/lib/cristin/types/generated/"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-loader": "^8.2.3",
    "browserslist-config-enonic": "^1.0.6",
    "cross-env": "^7.0.3",
    "enonic-types": "^0.4.7",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "file-loader": "^6.2.0",
    "glob": "^7.2.0",
    "html-webpack-plugin": "^5.5.0",
    "json-schema-to-typescript": "^10.1.5",
    "prettier": "^2.5.1",
    "ramda": "^0.28.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "browserslist": [
    "extends browserslist-config-enonic"
  ],
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 7.10.0"
  }
}
